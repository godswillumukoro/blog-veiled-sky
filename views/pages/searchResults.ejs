<main class="wrapper mbs-4"">
  <h1>Search results</h1>

  <ul class="article-post-list">
    <% data.forEach(post => { %>

    <li class="mbs-4">
      <a href="/post/<%= post._id %>" class="article-post-title"
        ><%= post.title %></a
      >
    </li>
    <span class="mbs-1"
      ><a href="/post/<%= post._id %>" class="article-post-date"
        ><%= post.createdAt.toDateString() %></a
      ></span
    >
    <p class="mbs-1">
      <a href="/post/<%= post._id %>" class="article-post-body"
        ><%= post.body %></a
      >
    </p>

    <% }) %> <% if (prevPage !== null && nextPage !== null) { %> <%-
    include('../partials/paginationButtons') %> <% } else if (nextPage !== null)
    { %>
    <nav class="pagination-button-right mb-2">
      <a class="btn" href="/?page=<%= nextPage  %>">Next</a>
    </nav>
    <% } else if (prevPage !== null) { %>
    <nav class="pagination-button-left mb-2">
      <a class="btn" href="/?page=<%= prevPage  %>">Prev</a>
    </nav>
    <% } %>
  </ul>
</main>
